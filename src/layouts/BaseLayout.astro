---
import "../styles/global.css";
import Navigation from '../components/Navigation.astro';
import Card from '../components/Card.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} >
  </head>
  <body style="font-family: 'Gravitica Mono';" class="bg-black">
    <div class="masonry m-2">
      <Card class="masonry-item" zoom="false" deg="130" title="Javier Barcelo Santos" subtitle="Software Developer Jr" text="I naturally take on leadership responsibilities when necessary, always prioritizing the best decisions for the team."/>
      <Card class="masonry-item" zoom="false" deg="49" img="pfp.jpg" />
      <Card class="masonry-item" deg="145" img="Cambridge.png" />
      <Card class="masonry-item" deg="145" zoom="false" github="https://github.com/Jarvyes14/CORE_NFTs.git" title="Core NFTs" subtitle="A minting and reclaiming platform for Core NFTs" text="My first project, built as a demo for Python Day to showcase what can be achieved with Django and a Blockchain." tech={["python", "react", "javascript", "html", "css", "solidity"]}/>
      <Card class="masonry-item" deg="145" img="Copy of Reconocimiento_SoftwareTalks_page-0001.jpg" />
      <Card class="masonry-item" deg="145" img="IFTP.jpg" />
      <Card class="masonry-item" deg="145" img="Docker.jpeg" />
      <Card class="masonry-item" deg="145" zoom="false" github="https://github.com/Jarvyes14/Portfolio.git" title="My Portfolio" subtitle="A portfolio website build with Astro, Tailwindcss and React." text="This project showcases all my work from one year in college and highlights the areas I am most interested in." tech={["tailwindcss", "react", "astro", "javascript", "html", "css"]}/>
      <Card class="masonry-item" deg="145" img="Solana.jpg" />
      <Card class="masonry-item" deg="145" img="Blockchain.jpg" />
      <Card class="masonry-item" deg="145" img="OGUM.png" />
      <Card class="masonry-item" deg="145" zoom="false" github="https://github.com/Jarvyes14/sistema-biblioteca-fullstack.git" title="Library Fullstack System" subtitle="Full stack Library Management System" text="Complete library management system with Spring Boot REST API, PostgreSQL database, and Next.js responsive frontend. Features CRUD operations for users, books, and loans with Docker containerization." tech={["java", "springboot", "nextjs", "postgre", "docker", "typescript"]} />
      <Card class="masonry-item" deg="145" img="Linux.png" />
      <Card class="masonry-item" deg="145" img="PythonEss.png" />
      <Card class="masonry-item" deg="145" img="Azure.png" />
      <Card class="masonry-item" deg="145" img="Nmap.jpg" />
      <Card class="masonry-item" deg="145" zoom="false" github="https://github.com/Jarvyes14/ChatBot.git" title="Twilio Chatbot" subtitle="A simple Twilio webhook with plans for AI integration" text="This project was initially built to handle webhook requests from Twilio, with the idea of integrating AI for smarter responses in the future." tech={["tailwindcss", "html", "css", "python", "docker"]}/>
      <Card class="masonry-item" deg="145" img="Java.png" />
      <Card class="masonry-item" deg="145" zoom="false" github="https://github.com/Jarvyes14/Sentinel-Backend.git" title="Sentinel Backend" subtitle="A predictive AI for sensor data" text="Built during IFTP, Sentinel was designed as an AI capable of predicting catastrophes before they happen." tech={["python", "docker"]}/>
      <Card class="masonry-item" deg="145" img="Python.png" />
      <Card class="masonry-item" deg="145" img="SQL.png" />
      <Card class="masonry-item" deg="145" img="AWS.png" />
      <Card class="masonry-item" deg="145" img="Networking.png" />
      <Card class="masonry-item" deg="145" zoom="false" github="https://github.com/Jarvyes14/market_app.git" title="Market App Backend" subtitle="Springboot API endpoint" text="Springboot API endpoint build to manage a PostgreSQL database." tech={["java", "springboot", "postgre"]}/>
    </div>
    <Navigation/>
  </body>
</html>
